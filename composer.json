{
    "name": "activerules/nugget",
    "description": "Validate complex JSON objects and process them on change.",
    "keywords": [
        "forms", "api", "business object", "activerules"
    ],
    "type": "library",
    "require": {
        "php" : ">=7.0",
        "nette/utils": "^2.4",
        "nette/forms": "^2.4",
        "activerules/json-guard": "^1.0.4",
        "activerules/json-reference": "^1.1.1",
        "google/apiclient": "^2.0"
    },
    "require-dev": {
        "tracy/tracy": "^2.4",
        "nette/tester": "^2.0",
        "squizlabs/php_codesniffer": "^3.1.1",
        "phpunit/phpunit" : "^6.4",
        "php-coveralls/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Activerules\\Nugget\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Activerules\\Nugget\\Test\\": "tests"
        }
    },
